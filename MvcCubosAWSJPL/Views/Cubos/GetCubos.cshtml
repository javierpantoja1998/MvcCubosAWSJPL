@model IEnumerable<MvcCubosAWSJPL.Models.Cubo>

@{
    ViewData["Title"] = "GetCubos";
}

<h1>GetCubos</h1>

<p>
    <a asp-action="InsertCubo" asp-controller="Cubos">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCubo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>Details</th>
            <th>Modificar</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCubo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <a asp-action="Details" asp-controller="Cubos" asp-route-id="@item.IdCubo">Detalles</a>
            </td>
            <td>
                <a asp-action="UpdateCubo" asp-controller="Cubos" asp-route-id="@item.IdCubo">Modificar</a>
            </td>
            <td>
                <a asp-action="DeleteCubo" asp-controller="Cubos" asp-route-id="@item.IdCubo">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
